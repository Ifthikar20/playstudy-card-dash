# Database Configuration
DATABASE_URL=postgresql+psycopg://localhost/playstudy_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis Configuration
REDIS_URL=redis://localhost:6379/0
CACHE_TTL=300

# Security Configuration
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:8080,http://localhost:5173,http://localhost:3000
ALLOWED_CREDENTIALS=True

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Application
API_V1_PREFIX=/api
DEBUG=True
ENVIRONMENT=development

# DeepSeek AI Configuration
# Get your API key from: https://platform.deepseek.com/
DEEPSEEK_API_KEY=your-deepseek-api-key-here

# ===== Text-to-Speech Providers (Optional) =====
# Used for AI voice narration in Mentor Mode

# OpenAI TTS (Recommended)
# Get your API key from: https://platform.openai.com/api-keys
# Models: tts-1 (faster, $15/1M chars) or tts-1-hd (higher quality, $30/1M chars)
# Voices: alloy, echo, fable, onyx, nova, shimmer
OPENAI_API_KEY=your-openai-api-key-here

# Google Cloud Text-to-Speech (Alternative)
# Get your API key from: https://console.cloud.google.com/apis/credentials
# Enable the API: https://console.cloud.google.com/apis/library/texttospeech.googleapis.com
# Pricing: Free for first 1M characters/month, then ~$4 per 1M characters for Neural voices
GOOGLE_CLOUD_API_KEY=your-google-cloud-api-key-here

# ===== Visual Examples (Optional) =====
# Unsplash API for fetching related images to enhance learning
# Get your Access Key from: https://unsplash.com/oauth/applications
# Free tier: 50 requests/hour
UNSPLASH_ACCESS_KEY=your-unsplash-access-key-here
